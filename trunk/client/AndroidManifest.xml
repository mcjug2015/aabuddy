<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mcjug.aameetingmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="AAMeetingApplication"
        android:allowBackup="true"
        >

        <activity
            android:name=".AAMeetingManager"
            android:label="@string/title_activity_main">
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".FindMeetingFragmentActivity" android:label="@string/findMeeting" />
        <activity android:name=".SubmitMeetingFragmentActivity" android:label="@string/submitMeeting" />
        <activity android:name=".MeetingListFragmentActivity" android:label="@string/meetingList" />
        
        <activity android:name=".AdminPrefsActivity" android:label="@string/adminPrefActivityTitle"/>
        <activity android:name=".AdminPrefsWithFragmentActivity" android:label="@string/adminPrefActivityTitle"/>
        
        <activity android:name=".LoginFragmentActivity" android:label="@string/loginActivityTitle" />
        
        <activity android:name=".RegisterFragmentActivity" android:label="@string/registrationActivityTitle" />

        <activity android:name=".ResetPasswordFragmentActivity" android:label="@string/resetPasswordActivityTitle" />
        
        <activity android:name=".HelpFragmentActivity" android:label="@string/helpActivityTitle" />
        
    </application>

</manifest>